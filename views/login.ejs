<body class="login-body">
 <div class="container">
    <form class="form-signin" method="post" action="/login">
        <% if(req.session && req.session.flash && req.session.flash.err) { %>
            <ul class="alert alert-danger">
                <li>
                    <%- JSON.stringify(req.session.flash.err) %>
                </li>
            </ul>
        <% } %>
        <% if(req.session && req.session.flash && req.session.flash.success) { %>
            <ul class="alert alert-success">
                <li>
                    <%- JSON.stringify(req.session.flash.success) %>
                </li>
            </ul>
        <% } %>
        <h2 class="form-signin-heading">Sails ReactJS</h2>
        <div class="login-wrap">
            <div class="user-login-info">
                <input type="text" name="email" class="form-control" placeholder="Email" autofocus>
                <input type="password" name="password" class="form-control" placeholder="Password">
            </div>
            <button class="btn btn-lg btn-login btn-block" type="submit">Sign in</button>
        </div>
    </form>
</div>
</div>